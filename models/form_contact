const mongoose = require('mongoose'); 
const validator = require('validator')



var formSchema = new mongoose.Schema({
    firstName:{
        type: String,
        required: true, 
        },
    lastName: { 
        type: String,
        required: true 
        },
    email: { 
        type: String, 
        required: true,
        trim: true,
        validate(value) { 
         if (!validator.isEmail(value)) {
             throw new Error("Invalid email") } } 
            },
    phone: { 
        type:String, 
        required: true,
        trim: true 
        },
    country: { 
        type: String, 
        required: true 
        
    },
    linkedin: { 
        type: String, 
        default:' لا يوجد '
    },
    twitter: { 
        type: String, 
        default:' لا يوجد '
    }, 
    agree: { 
        type: Boolean,
    }, 
    meetingPurpose:{
        type: String, 
        required: true 
    },
   meetingType:{
        type: String, 
        required: true 
    },
   otherPurpose:{
        type: String, 
        
    },
   isIndividual:{
        type: String, 
        
    },
   companyName:{
        type: String, 
        
    },
 companyWebsite:{
        type: String, 
        
    },
}, 
{ timestamps: true }

);


module.exports = mongoose.model('Form', formSchema);
